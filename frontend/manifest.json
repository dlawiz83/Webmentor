{
  "manifest_version": 3,
  "name": "WebMentor",
  "version": "1.0",
  "description": "Turn any webpage into an interactive learning guide.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebMentor"
  },
 "trial_tokens": [
 "$VITE_CHROME_AI_TOKEN",
 "$VITE_REWRITE_TOKEN"
 ],

  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>", "file://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file://*/*"],
      "js": ["assets/content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
